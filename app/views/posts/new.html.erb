
<div class="row-fluid">
	<div class="span12">
		<h1> Create Post </h1>
	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		
		<%= form_for([current_user, @post]) do |f| %>

			<% if !@post.errors.empty? %>
				<ul style="color:red">
				<% @post.errors.full_messages.each do |err| %>
					<li> <%= err %> </li>
				<% end %>
				</ul>
			<% end %>

			<div>
				<%= f.label :title %>
				<%= f.text_field :title %>
			</div>

			<div>
				<%= f.label :content %>
				<%= f.text_area :content, style:"height:200px" %>
			</div>

			<div>
				<%= f.submit %>
			</div>

			<div>
				<%= link_to "Back", user_posts_path %>
			</div>
		<% end %>

	</div>
</div>