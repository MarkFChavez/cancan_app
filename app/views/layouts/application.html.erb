<!DOCTYPE html>
<html>
<head>
  <title>CancanApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
	<% if !notice.nil? %>
		<div class="alert alert-success">
			<%= notice %>
		</div>
	<% end %>

	<% if !alert.nil? %>
		<div class="alert alert-error">
			<%= alert %>
		</div>
	<% end %>

	<%= yield %>
</div>

</body>
</html>
